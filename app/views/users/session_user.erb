<h1>Hello, <%= @user.name %>!</h1>
<h2> <%= @user.address %> </h2>
<h3>Listed Items:</h3>
<% @user.items.sort_by {|item| item.available? ? 1 : 0}.each do |item| %>
  <%= item.name %><br>
  <a href="<%=item_path(item)%>"> <img src="<%= item.images.first.url if item.images.first%>" alt="" ></a><br>
  <%= item.description %><br>
  <%= item.available? %> <br>
  <%= button_to "Delete Item", item_path(item), method: :delete %> <%= button_to "Edit Item", edit_item_path(item), method: :get%>
<% end %>
<%= button_to "Add New Item", new_item_path, method: :get %>

<h3>Most Recent Reviews</h3>
<% @user.five_recent_reviews.each do |review| %>
<%= review.rating %> <br>
<%= review.content %> <br>
<% end %>
