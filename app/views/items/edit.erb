<h1>Edit Item</h1>

<% if !@images.empty? %>
  <% @images.each do |image| %>
  <img src="<%=image.url %>" alt="">
  <%= button_to "Delete Image", image_path(image), method: :delete if @images.size > 1 %>
  <% end %>
<% end %>
<%= button_to "Add Image", new_image_path, method: :get, params: {:item_id => @item.id} %>



<%= form_for @item do |f| %>
  <%= f.label :name %><%= f.text_field :name %>
  <%= f.label :description %><%= f.text_field :description %>
  <%= f.label :price %><%= f.number_field :price %>
  <%= f.submit "Update Item"  %>
  <% end %>
