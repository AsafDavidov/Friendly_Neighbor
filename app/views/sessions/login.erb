<h1>Login please</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |mess| %>
  <%= mess %>
  <% end %>
<% end %>
<div class="create-user">
<%= form_tag controller: "sessions", action: "create", method: :post %>
   <%= label_tag :name, "Username" %> <%= text_field_tag :name %>
   <%= label_tag :password, "Password" %> <%= password_field_tag :password %>
   <p class="clear"><%= submit_tag "Log In" %></p>
 </div>

<div style="clear: both; width:auto; padding-top: 5%;">New around here? <%= link_to "Create Account", new_user_path%></div>
